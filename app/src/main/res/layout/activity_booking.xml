<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.BookingActivity"
        android:background="@drawable/bg">

    <TextView
            android:text="กรอกรายละเอียดการจอง"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textColor="@android:color/black"
    />
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout8">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextBookingTel"
                android:hint="เบอร์โทรติดต่อกลับ"
                android:inputType="phone"
                android:maxLength="10"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="จองคิวเดี๋ยวนี้"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnBooking"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView30"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextBookingTime"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextBookingTime"/>
    <TextView
            android:text="วันที่จอง"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout8"
            app:layout_constraintTop_toTopOf="@+id/editTextBookingDate"
            app:layout_constraintBottom_toBottomOf="@+id/editTextBookingDate"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextBookingDate"
            android:hint="กรุณาระบุวันที่"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout8"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextBookingTime"
            app:layout_constraintEnd_toEndOf="@+id/editTextBookingDate"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextBookingDate"
            app:layout_constraintStart_toStartOf="@+id/editTextBookingDate"
            android:inputType="text"
            android:hint="กรุณาระบุเวลา"/>
    <TextView
            android:text="เวลาที่จอง"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/editTextBookingTime"
            app:layout_constraintBottom_toBottomOf="@+id/editTextBookingTime"
            app:layout_constraintStart_toStartOf="@+id/textView25"
    />
</android.support.constraint.ConstraintLayout>