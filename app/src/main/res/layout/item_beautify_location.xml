<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLacationName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btnEditLocation"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_build"
                android:id="@+id/btnEditLocation"
                android:background="@color/colorEdit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="ละติจูด:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewLacationName"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewBeautifyLat"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"/>
        <TextView
                android:text="ลองจิจูด:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                app:layout_constraintStart_toEndOf="@+id/textViewBeautifyLat"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textViewBeautifyLat"
                app:layout_constraintBottom_toBottomOf="@+id/textViewBeautifyLat"/>
        <TextView
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewBeautifyLng"
                app:layout_constraintTop_toTopOf="@+id/textView29"
                app:layout_constraintBottom_toBottomOf="@+id/textView29"
                app:layout_constraintStart_toEndOf="@+id/textView29"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>